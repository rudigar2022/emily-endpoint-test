{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "lib": ["DOM", "ES2016"],
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "Node",
    "types": ["node", "reflect-metadata"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./"
  },
  "include": ["../src/**/*.ts"],  
  "compileOnSave": true,
  "exclude": ["node_modules"]
}
